{
  "name": "better-table",
  "version": "1.0.1",
  "description": "A modern, flexible, and fully typed React data table component",
  "author": "Juan Puca",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/better-table.cjs.js",
  "module": "./dist/better-table.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/better-table.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/better-table.cjs.js"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "react",
    "table",
    "data-table",
    "datagrid",
    "typescript",
    "sorting",
    "filtering",
    "pagination",
    "selection"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrodrigopuca/BetterTable.git"
  },
  "bugs": {
    "url": "https://github.com/jrodrigopuca/BetterTable/issues"
  },
  "homepage": "https://github.com/jrodrigopuca/BetterTable#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "vite --config demo/vite.config.ts",
    "build": "vite build",
    "build:types": "tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest --config vitest.config.ts",
    "test:run": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
